<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
<!--===============Authorization==================-->
    <servlet>
        <servlet-name>authorization</servlet-name>
        <servlet-class>nure.kaplun.HotelSupervisor.controller.AuthorizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>
    <!--===============SessionCheck==================-->
    <servlet>
        <servlet-name>session</servlet-name>
        <servlet-class>nure.kaplun.HotelSupervisor.controller.SessionCheckerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>session</servlet-name>
        <url-pattern>/sessionCheck</url-pattern>
    </servlet-mapping>
    <!--===============Registration==================-->
    <servlet>
        <servlet-name>adminRegistration</servlet-name>
        <servlet-class>nure.kaplun.HotelSupervisor.controller.AdminRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminRegistration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
<!--====================Logout=========================-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>nure.kaplun.HotelSupervisor.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
<!--====================getHotels=========================-->
    <servlet>
        <servlet-name>getHotels</servlet-name>
        <servlet-class>nure.kaplun.HotelSupervisor.controller.HotelsGetterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getHotels</servlet-name>
        <url-pattern>/getHotels</url-pattern>
    </servlet-mapping>
    <!--====================getHotelRooms=========================-->
    <servlet>
        <servlet-name>getHotelRooms</servlet-name>
        <servlet-class>nure.kaplun.HotelSupervisor.controller.HotelRoomsGetterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getHotelRooms</servlet-name>
        <url-pattern>/getHotelRooms</url-pattern>
    </servlet-mapping>
</web-app>